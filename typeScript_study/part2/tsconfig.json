/* 
tsconfig.json是ts编辑器的配置文件，ts编辑器可以根据它的信息来对代码进行编译
 */
 //include用来指定哪些ts文件需要编译
 //路径 ** 任意目录 * 任意文件
 //exclude 不需要被编译的文件目录
 {
   "include":[
     "./src/**/*"
   ],
   "exclude":[

   ], 
   "compilerOptions": {
     //用来指定ts被编译成ES的版本
     "target": "esnext",
     //module 指定要使用的模块化规范
     "module": "esnext",
     //用来指定项目中要使用的库 一般不需要改
     "lib": ["dom"],
     //用来指定编译后的文件的所在目录
     "outdir": "",
     //把代码合并成一个文件
     "outFile": "",
     //是否对js文件进行编译，默认是false
      "allowJs": false,
      //是否检查JS代码是否符合语法规范 
      "checkJs":false,
      //是否移除注释
      "removeComments": false,
      //不生成编译后的文件
      "noEmit": false,
      //当有错误时不生成编译后的文件 
      "noEmitOnError": false,
      //使用严格模式
      //严格模式的总开关
      "strict": true,
      "alwaysStrict": false,
      //不允许隐式any类型
      "noImplicitAny": false,
      //不允许不明确类型的this
      "noImplicitThis": false
   }
 }